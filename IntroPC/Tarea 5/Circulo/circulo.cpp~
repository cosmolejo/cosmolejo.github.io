#include <cstdio>
#include <cmath>

using namespace std;

int main (void)
{
  double R,pi,area,peri;
  printf("ingrese el radio del circulo: ");
  scanf("%e",&R);
  pi=3.141592654;
  area=pi*pow(R,2);
  peri=2*pi*R;
  printf("el area de su circunferencia es: %e \n",area);
  printf("el perimetro de su circunferencia es: %e \n",pero);

  return 0;

}
